source-repository head
  type:     git
  location: git://github.com/meteficha/Hipmunk.git

Flag small_base
  Description: Choose the new smaller, split-up base package.

Flag debug
  Description: Enable debugging.
  Default: False

Flag system-chipmunk
  Description: Use the system-wide installed chipmunk library
  Default: False

Library
  Exposed-Modules:
      Physics.Hipmunk,
      Physics.Hipmunk.Callbacks,
      Physics.Hipmunk.Common,
      Physics.Hipmunk.Body,
      Physics.Hipmunk.Shape,
      Physics.Hipmunk.Constraint,
      Physics.Hipmunk.Space,
      Physics.Hipmunk.Unsafe
  Other-Modules:
      Physics.Hipmunk.Internal
  Include-Dirs:
      Physics/Hipmunk
  Includes:
      wrapper.h

  if flag(system-chipmunk)
    Include-Dirs:
        /usr/include/chipmunk
    Extra-libraries:
        chipmunk
  else
    Include-Dirs:
        Chipmunk-6.2.2/include/chipmunk
    C-Sources:
        Chipmunk-6.2.2/src/chipmunk.c,
        Chipmunk-6.2.2/src/constraints/cpConstraint.c,
        Chipmunk-6.2.2/src/constraints/cpDampedRotarySpring.c,
        Chipmunk-6.2.2/src/constraints/cpDampedSpring.c,
        Chipmunk-6.2.2/src/constraints/cpGearJoint.c,
        Chipmunk-6.2.2/src/constraints/cpGrooveJoint.c,
        Chipmunk-6.2.2/src/constraints/cpPinJoint.c,
        Chipmunk-6.2.2/src/constraints/cpPivotJoint.c,
        Chipmunk-6.2.2/src/constraints/cpRatchetJoint.c,
        Chipmunk-6.2.2/src/constraints/cpRotaryLimitJoint.c,
        Chipmunk-6.2.2/src/constraints/cpSimpleMotor.c,
        Chipmunk-6.2.2/src/constraints/cpSlideJoint.c,
        Chipmunk-6.2.2/src/cpArbiter.c,
        Chipmunk-6.2.2/src/cpArray.c,
        Chipmunk-6.2.2/src/cpBB.c,
        Chipmunk-6.2.2/src/cpBBTree.c,
        Chipmunk-6.2.2/src/cpBody.c,
        Chipmunk-6.2.2/src/cpCollision.c,
        Chipmunk-6.2.2/src/cpHashSet.c,
        Chipmunk-6.2.2/src/cpPolyShape.c,
        Chipmunk-6.2.2/src/cpShape.c,
        Chipmunk-6.2.2/src/cpSpace.c,
        Chipmunk-6.2.2/src/cpSpaceComponent.c,
        Chipmunk-6.2.2/src/cpSpaceHash.c,
        Chipmunk-6.2.2/src/cpSpaceQuery.c,
        Chipmunk-6.2.2/src/cpSpaceStep.c,
        Chipmunk-6.2.2/src/cpSpatialIndex.c,
        Chipmunk-6.2.2/src/cpVect.c

  C-Sources:
        Physics/Hipmunk/wrapper.c

  if flag(small_base)
    Build-Depends: base >= 3 && < 5,
                   array >= 0.1 && < 0.6,
                   containers >= 0.1 && < 0.6,
                   transformers >= 0.2 && < 0.5,
                   StateVar >= 1.0 && < 1.2
  else
    Build-Depends: base >= 2 && < 3,
                   transformers >= 0.2 && < 0.5,
                   StateVar >= 1.0 && < 1.2

  Extensions:    CPP, ForeignFunctionInterface, EmptyDataDecls
  Build-Tools:   hsc2hs
  GHC-Options:   -Wall
  CC-Options:    -ffast-math -std=gnu99 -DCP_ALLOW_PRIVATE_ACCESS=1
  if flag(debug)
    CC-Options:  -g
  else
    CC-Options:  -DNDEBUG
  Extra-Libraries: m
